     -setup {
	set mgr [::EVB::ConnectionManager %AUTO% -port $::testPort]
    } \
    -cleanup {
#	$mgr destroy
	close $::sock

    } \
    -body {
	set ::host ""
	$mgr configure -connectcommand [list Connected %H]
	startConnection
	vwait ::connection;	# Starts the event loop going.
	list $::host

    } -result [list 127.0.0.1];	# (localhost)

